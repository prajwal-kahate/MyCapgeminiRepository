package com.cg1;

public class Student {
	private int srollno;
	private String Sname;
	private int sub1;
	private int sub2;
	private int sub3;
	
	private int sum;
	private int avg=sum/3;
	private String grade1;
	
	public int getSrollno() {
		return srollno;
	}
	public void setSrollno(int srollno) {
		this.srollno = srollno;
	}
	public String getSname() {
		return Sname;
	}
	public void setSname(String sname) {
		Sname = sname;
	}
	public int getSub1() {
		return sub1;
	}
	public void setSub1(int sub1) {
		this.sub1 = sub1;
	}
	public int getSub2() {
		return sub2;
	}
	public void setSub2(int sub2) {
		this.sub2 = sub2;
	}
	public int getSub3() {
		return sub3;
	}
	public void setSub3(int sub3) {
		this.sub3 = sub3;
	}
	
	public int allSum() {
		sum=sub1+sub2+sub3;
		return sum;
	}
	
	public int avrage()
	{
		avg=sum/3;
		return avg;
	}
	
	
	
	public String grade()
	{
		if (avg>70) {
			return "Distinct";
			
		} else if(avg>60){
			return "First Class";

		}else if(avg>50)
		{
			return "Second Class";
		}else {
			return "Failed";
		}
		
		
		
		
	}
	@Override
	public String toString() {
		return "Student [srollno=" + srollno + ", Sname=" + Sname + ", sub1=" + sub1 + ", sub2=" + sub2 + ", sub3="
				+ sub3 + ", sum=" + sum + ", avg=" + avg + ", grade=" + grade1 + "]";
	}
	
	
	

}
